<main>
    <form method="post">
        <div class="form-group row">
            <label for="ClassroomId" class="col-sm-2 col-form-label">First Name:</label>
            <div class="col-sm-10">
                <input class="form-control" name="firstname" type="text" value="{{ firstname }}" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="ClassroomName" class="col-sm-2 col-form-label">Last Name:</label>
            <div class="col-sm-10">
                <input class="form-control" name="lastname" type="text" value="{{ lastname }}" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="ClassroomDescription" class="col-sm-2 col-form-label">Email:</label>
            <div class="col-sm-10">
                <input class="form-control" name="email" type="text" value="{{ email }}" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="ClassroomDescription" class="col-sm-2 col-form-label">Address:</label>
            <div class="col-sm-10">
                <input class="form-control" name="address" type="text" value="{{ address }}" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="ClassroomDescription" class="col-sm-2 col-form-label">Login:</label>
            <div class="col-sm-10">
                <input class="form-control" name="login" type="text" value="{{ login }}" disabled>
            </div>
        </div>
        <div class="for-group row">
            <div class="col-sm-10">
                <button id="submit-btn" type="submit" class="btn btn-primary">DELETE</button>
            </div>
        </div>
    </form>
</main>

